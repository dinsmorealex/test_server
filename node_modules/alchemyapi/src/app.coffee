#!/usr/bin/env node

program = require('commander')
AlchemyAPI = require('./AlchemyAPI.js')

program
  .version('0.0.1')
  .option('-p, --proxy [optional]', 'Proxy Address')
  .parse(process.argv);

alchemy = new AlchemyAPI(require('os').cpus().length, {
	proxy: program.proxy
})

alchemy.text(program.args.join(' '), (e, res) ->
	console.log(JSON.stringify((e or res), null, 4))
)
